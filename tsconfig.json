{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ESNext"],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"] // 将 "@/config" 映射到 "src/config"
    },
    "resolveJsonModule": true,
    // "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
